<div id="winningContainer">
  {{#if lastWinner}}
    {{view this.winningTicketView}}
  {{/if}}
</div>

<div id="buttonContainer">
  {{#if potentialWinnersDepleted}}
    <p><strong>No more tickets to pick!</strong></p>
  {{else}}
    <button id="pickerButton" {{action "pick"}}>Pick!</button>
  {{/if}}
</div>

<div id="winnerList">
  {{#if winnerList}}
    <h2>Winner List</h2>
    <ul>
    {{#each winnerList}}
      <li>
      {{name}}
      </li>
    {{/each}}
    </ul>
  {{/if}}
</div>
